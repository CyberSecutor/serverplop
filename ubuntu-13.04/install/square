#!/bin/bash

if [[ $EUID -ne 0 ]]; then
  echo "$0 must be run as root"
  exit 1
fi

OPAD=$(pwd)

cd /tmp

rm -rf square* && \
git clone https://github.com/observing/square.git && \
cd square && \
touch /tmp/square/.git/hooks/pre-commit && \
chmod 0777 /tmp/square/.git/hooks/pre-commit && \
make update && \
make install && \
cd ../ && \
rm -rf square

cd $OPAD